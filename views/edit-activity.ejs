<%- include('partials/header') %>

<div class="container">
  <h2>Edit Activity</h2>

<form action="../edit/<%= activity.id %>" method="POST" class="form-box">

    <label for="activity">Activity</label>
    <input 
      type="text" 
      id="activity" 
      name="activity" 
      value="<%= activity.activity %>" 
      required
    >

    <label for="minutes">Minutes</label>
    <input 
      type="number" 
      id="minutes" 
      name="minutes" 
      value="<%= activity.minutes %>" 
      required
    >

    <label for="calories">Calories</label>
    <input 
      type="number" 
      id="calories" 
      name="calories" 
      value="<%= activity.calories %>" 
      required
    >

    <label for="date">Date</label>
    <input 
      type="date" 
      id="date" 
      name="date" 
      value="<%= activity.date.toString().slice(0,10) %>"
      required
    >

    <button class="btn" type="submit">Save Changes</button>
  </form>
</div>

<%- include('partials/footer') %>
