<%- include('partials/header') %>

<h2>Edit Activity</h2>

<form action="edit/<%= activity.id %>" method="POST">
  <label>Activity:</label>
  <input type="text" name="activity" value="<%= activity.activity %>" required>

  <label>Minutes:</label>
  <input type="number" name="minutes" value="<%= activity.minutes %>" required>

  <label>Calories:</label>
  <input type="number" name="calories" value="<%= activity.calories %>" required>

  <label>Date:</label>
  <input type="date" name="date" value="<%= activity.date.toISOString().slice(0,10) %>" required>

  <button type="submit">Save Changes</button>
</form>

<%- include('partials/footer') %>
