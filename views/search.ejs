<%- include('partials/header') %>

<div class="container">
  <h2>Search Activities</h2>

  <form method="POST" action="/search">
      <input 
        name="term" 
        placeholder="Search activity name" 
        style="width:100%; padding:10px; margin-bottom:15px;"
      >
      <button type="submit">Search</button>
  </form>

  <% if (rows.length > 0) { %>
  <table>
    <tr>
      <th>Activity</th>
      <th>Minutes</th>
      <th>Calories</th>
      <th>Date</th>
    </tr>

    <% rows.forEach(r => { %>
      <tr>
        <td><%= r.activity %></td>
        <td><%= r.minutes %></td>
        <td><%= r.calories %></td>
        <td><%= r.nice_date %></td>
      </tr>
    <% }) %>
  </table>
  <% } else { %>

    <p style="margin-top:20px;">No results found.</p>

  <% } %>

</div>

<%- include('partials/footer') %>
